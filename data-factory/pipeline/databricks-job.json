{
	"name": "databricks-job",
	"properties": {
		"activities": [
			{
				"name": "r_score_batch_databricks",
				"type": "DatabricksNotebook",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/Shared/azure-rmodel-devops/r_score_batch_databricks",
					"baseParameters": {
						"inputdata_path": {
							"value": "/dbfs/mnt/adlsv2-@{pipeline().parameters.source_folder}/@{pipeline().parameters.source_file}",
							"type": "Expression"
						},
						"outputdata_path": {
							"value": "@concat('/dbfs/mnt/adlsv2-databricks/output_files/',replace(string(pipeline().parameters.source_file),'input','output'))",
							"type": "Expression"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "kmdatabricksprod",
					"type": "LinkedServiceReference"
				}
			}
		],
		"parameters": {
			"source_folder": {
				"type": "String",
				"defaultValue": "@triggerBody().folderPath"
			},
			"source_file": {
				"type": "String",
				"defaultValue": "@triggerBody().fileName"
			}
		},
		"annotations": []
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}